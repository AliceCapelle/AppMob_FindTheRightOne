<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="370dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivStudentPic"
        android:layout_width="143dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        app:civ_border_color="#707070"
        app:civ_border_width="0.1dp" />

    <TextView
        android:id="@+id/tvNameSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivStudentPic"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:fontFamily="@font/fjallaone_regular"
        android:text="@string/name"
        android:textColor="@color/textAccent"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tvAdjSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameSwipe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/fjallaone_regular"
        android:gravity="center"
        android:text="@string/adj_layout"
        android:textColor="@color/textPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDescriptionSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdjSwipe"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:fontFamily="@font/opensanscondensed_light"
        android:gravity="center"
        android:maxLength="280"
        android:maxLines="3"
        android:text="@string/description"
        android:textColor="@color/textPrimary"
        android:textSize="15sp" />


</RelativeLayout>