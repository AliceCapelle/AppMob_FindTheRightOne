<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <Button
            android:id="@+id/bSwipeP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/segoeui"
            android:stateListAnimator="@null"
            android:text="@string/swipe"
            android:textAllCaps="false"
            android:textColor="@color/darkBleuText"
            android:textSize="20sp" />
        <Button
            android:id="@+id/bDecoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:fontFamily="@font/segoeui"
            android:stateListAnimator="@null"
            android:text="Deconnexion"
            android:textAllCaps="false"
            android:textColor="@color/darkBleuText"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="80dp"
        android:text="Matchs"
        android:textColor="@color/darkBleuText"
        android:fontFamily="@font/fjallaone_regular"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgProfile"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:visibility="visible"
        app:civ_border_color="#707070"
        app:civ_border_width="0.1dp" />


    <ProgressBar
        android:id="@+id/pBProfile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="223dp"
        android:fontFamily="@font/fjallaone_regular"
        android:text="Name"
        android:textColor="@color/textAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvAdjectives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:fontFamily="@font/fjallaone_regular"
        android:text="Adj - Adj - Adj"
        android:textColor="@color/textPrimary"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:fontFamily="@font/segoeui"
        android:text="Description"
        android:textColor="@color/textPrimary"
        android:textSize="18sp" />


    <Button
        android:id="@+id/bEdit"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/backgroundColor"
        android:fontFamily="@font/fjallaone_regular"
        android:stateListAnimator="@null"
        android:text="@string/editer"
        android:textColor="@color/textPrimary"
        android:textSize="15sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bEdit"
        android:background="@color/textPrimary" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="283dp"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bCloseEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bEdit"
        android:layout_below="@+id/tvAdjectives"
        android:layout_marginTop="-165dp"
        android:text="@string/close"
        android:visibility="invisible" />


</RelativeLayout>