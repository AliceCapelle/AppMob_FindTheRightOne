<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationConfirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <Button
            android:id="@+id/bHomeC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/fjallaone_regular"
            android:stateListAnimator="@null"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/darkBleuText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bLoginC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/fjallaone_regular"
            android:stateListAnimator="@null"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/darkBleuText"
            android:textSize="20sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/register_result"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="244dp"
        android:text="Votre inscription est en cours de traitement..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="153dp" />

    <ImageView
        android:id="@+id/imgSign_Up"
        android:layout_width="260dp"
        android:layout_height="286dp"
        android:layout_marginBottom="229dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/singup"
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/tv_Confirmation"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="158dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/fjallaone_regular"
        android:text="TextView"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSign_Up" />

</android.support.constraint.ConstraintLayout>